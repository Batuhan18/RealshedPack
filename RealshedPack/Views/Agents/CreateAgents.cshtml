@model CreateAgentDto
@{
    ViewData["Title"] = "CreateAgents";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Personel İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Personel Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">İsim Giriniz</label>
                                <input type="text" class="form-control" asp-for="AgentName" id="title">
                            </div>
                            <div class="form-group">
                                <label for="agentSurname">Soyad Giriniz</label>
                                <input type="text" class="form-control" asp-for="AgentSurname">
                            </div>
                            <div class="form-group">
                                <label for="phone">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone">
                            </div>
                            <div class="form-group">
                                <label for="email">Email Giriniz</label>
                                <input type="text" class="form-control" asp-for="Email">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görsel Seçiniz</label>
                                <input type="file" class="form-control" asp-for="Profile_Image" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="description">Adres Giriniz</label>
                                <input type="text" class="form-control" asp-for="Address">
                            </div>
                            <div class="form-group">
                                <label for="bio">Oluşturulan Tarih</label>
                                <input type="date" class="form-control" asp-for="Created_Time">
                            </div>
                            <div class="form-group">
                                <label for="bio">Biyografi Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Bio"></textarea>
                            </div>
                            
                            <div class="card-action">
                                <button class="btn btn-primary">Personel Yazısını Ekle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>



