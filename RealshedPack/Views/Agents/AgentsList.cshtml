@model List<ResultAgentDto>
@{
    ViewData["Title"] = "AgentsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Personel İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Personel Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Personel ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Soyad</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Fotoğraf</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col">Biyografi</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AgentName</td>
                                        <td>@item.AgentSurname</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Profile_Image</td>
                                        <td>@item.Address</td>
                                        <td>@item.Bio</td>
                                        <td><a href="/Agents/DeleteAgents/@item.AgentsId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Agents/UpdateAgents/@item.AgentsId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Agents/CreateAgents/" class="btn btn-outline-primary">Yeni Personel Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

