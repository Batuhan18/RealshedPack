@model List<ResultAboutDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="page-title centred" style="background-image: url(/RealshedPack/Realshed/assets/images/background/page-title-3.jpg);">
    <div class="auto-container">
        <div class="content-box clearfix">
            <h1>About Us</h1>
            <ul class="bread-crumb clearfix">
                <li><a href="index.html">Home</a></li>
                <li>About Us</li>
            </ul>
        </div>
    </div>
</section>
@foreach (var item in Model)
{
    <section class="about-section about-page pb-0">
        <div class="auto-container">
            <div class="inner-container">
                <div class="row align-items-center clearfix">
                    <div class="col-lg-6 col-md-12 col-sm-12 image-column">
                        <div class="image_block_2">
                            <div class="image-box">
                                <figure class="image"><img src="@item.ImageUrl" alt=""></figure>
                                <div class="text wow fadeInLeft animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                                    <h2>20</h2>
                                    <h4>Years of <br />Experience</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12 col-sm-12 content-column">
                        <div class="content_block_3">
                            <div class="content-box">
                                <div class="sec-title">
                                    <h5>About</h5>
                                    <h2>Hi, I’m @item.Name</h2>
                                </div>
                                <div class="text">
                                    <p>@item.Description</p>
                                </div>

                                <div class="btn-box">
                                    <a href="contact.html" class="theme-btn btn-one">Contact With Me</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
