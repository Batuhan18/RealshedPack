@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Hakkımızda Girişi</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" class="form-control" asp-for="AboutId" id="title">
                            <div class="form-group">
                                <label for="title">İsim Giriniz</label>
                                <input type="text" class="form-control" asp-for="Name" id="title">
                            </div>
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Görsel Giriniz</label>
                                <input type="file" class="form-control" asp-for="ImageUrl" id="imageurl">
                            </div>

                            <div class="card-action">
                                <button class="btn btn-primary">Hakkımızda Yazısını Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

